<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reserva espaço</title>
  <style>
    body{
      display: flex;
      flex-direction:column;
      align-items: center;
      background-color: #252525;
      margin: 0;
      padding: 0;
      padding-top: 1em;
      color:white
    }
    .divForm{
      padding: 3em;
      border:gray solid 1px;
      border-radius: .5em
    }
    .label-float{
      position: relative;
      padding-top: 10px;
      margin-top: 5%;
      margin-bottom: 5%;
    }
    .label-float input{
      width: 100%;
      padding: 5px 5px ;
      display: inline-block;
      border: 0;
      border-bottom: 1px solid gray;
      background-color: transparent;
      outline: none;
      color: white;
      min-width: 170px;
      transition: all .3s ease-in-out;
      border-radius: 5%;
    }
    .label-float input:focus{
    border-bottom: 2px solid gray;
    }
    input:-webkit-autofill{
      -webkit-box-shadow: 0 0 0px 1000px #252525 inset;
    background-color: transparent !important;
    -webkit-text-fill-color: white;}
    .label-float label{
      cursor: pointer;
      position: absolute;
      top:0;
      left: 0;
      margin-top: 10px;
    }
    .label-float input:focus + label,
    .label-float input:valid + label{
    font-size: 13px;
    margin-top: 0px;
    color: gray;
  }
    button{
    background-color: transparent;
    border: 1px solid gray;
    color: white;
    padding: 5px;
  }
  .divErro{
    display: none;
    background-color: #ffb2b2;
    color: black;
    font-weight: 600;
    border-radius: 5px;;
    width: 90%;
    margin: 0 auto;
    padding: 5px;
    justify-content: center;
    font-size: small;
  }
  </style>
</head>
<body>
  <h1>Login</h1>
  <div class="divForm">
    <form id="form" onsubmit="EfetuaLogin()"> 
      <div class="label-float">
        <input type="text" id="email" name="email" required placeholder =""/>
        <label id="lblEmail">E-mail</label>
      </div>
      <div class="label-float">
        <input type="password" id="senha" name="senha" required placeholder =""/>
        <label id="lblSenha">Senha</label>
      </div>
      <div class="divErro"></div>
      <div style="display: flex;flex-direction: row; justify-content: space-around; margin-top: 2em;">
         <button onclick="irParaCadastro()">Cadastrar</button>
      <button type="submit">Entrar</button>
      </div>     
    </form>
  </div>
</body>
<script>
  function irParaCadastro(){
    window.location.href="/cadastro";
  }

  async function EfetuaLogin(){
  event.preventDefault();

  let form =document.getElementById("form");
  const formData = new FormData(form)

  const response = await fetch("/login",{
  method:"POST",
  headers: {
        "Content-Type": "application/x-www-form-urlencoded"
        },
  body: new URLSearchParams(formData).toString()
  })
    const data= await response.json();
    
    if(!data.nome){
    const divErro = document.querySelector(".divErro")
    divErro.innerHTML="Usuario ou senhas inválidos!"
    divErro.style.display="flex"

    setTimeout(() => {
      divErro.style.display="none"
    }, 2000);
    }
    window.localStorage.setItem("nome",data.nome)
    window.location.href="/home"

  }
 
</script>
</html>